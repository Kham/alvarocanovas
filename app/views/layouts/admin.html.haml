!!!
%html

  %head
    %title Alvarocanovas
    = stylesheet_link_tag  "ui-lightness/jquery-ui-1.8.2.custom", 'admin'
    = javascript_include_tag :defaults, 'lib/tiny_mce/tiny_mce', 'lib/jquery.tinymce', 'lib/itkin/ajax_multipart_form', 'lib/itkin/sortable_accordion', 'admin'
    = csrf_meta_tag

  %body
    #page
      #tabs
        %ul
          %li= link_to "Editorial", '#tab-0'
          %li= link_to "Advertizing", admin_categories_path(:type => 'Client')
          %li= link_to "Publication", admin_categories_path(:type => 'Publication')
          %li= link_to Content::BIO.label, edit_admin_content_path(Content::BIO), :id =>"content_#{Content::BIO.id}_label"
          %li= link_to Content::CURRENT_WORK.label, edit_admin_content_path(Content::CURRENT_WORK), :id =>"content_#{Content::CURRENT_WORK.id}_label"
          %li= link_to "Video", admin_videos_path

        #tab-0
          = yield
